            .card_side.card_side--back.card_side--back-2
              .card_cta
                .card_price-box
                  p.card_price-only Ranging From
                  p.card_price-value 13K-18K PKR
                a.btn.btn-white(href='/product/Booking') Book Now
        .col-md-4
          .card
            .card_side.card_side--front
              .card_picture.card_picture--3  
              h4.card_heading
                span.card_heading-span.card_heading-span--3
                  | The Snow Adventure
              .card_details
                ul
                  li Skardu | Malam Jabba | Kalash | Hunza Valley
                  li 5 days tour
                  li Up to 15 people
                  li 3 tour guides
                  li sleep in provided tents
            .card_side.card_side--back.card_side--back-3
              .card_cta
                .card_price-box
                  p.card_price-only Ranging From
                  p.card_price-value 18K-22K PKR
                a.btn.btn-white(href='/product/Booking') Book Now
        .col-md-12
          .d-flex.justify-content-center.padding-top-big
            a.btn.btn-green(href='/product/Booking') Discover All Tours
